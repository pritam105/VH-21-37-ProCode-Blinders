<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.spithackathon.Krishi">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />

    <application
        android:name=".application.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".activities.WeatherForecastActivity"></activity>
        <activity android:name=".activities.WeatherActivity" />
        <activity android:name=".activities.ChatbotActivity" />
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.Select_Policy"
            android:label="@string/policy_title">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.spithackathon.Krishi.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.SelectProblem"
            android:label="@string/problem_title">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.spithackathon.Krishi.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.TreatmentDetail"
            android:label="@string/treatment_detail_title">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.spithackathon.Krishi.activities.SelectProblem" />
        </activity>
        <activity
            android:name=".activities.CropProductionActivity"
            android:label="@string/crops_production_title">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.spithackathon.Krishi.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.HorticultureActivity"
            android:label="@string/title_activity_horticulture"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.spithackathon.Krishi.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.CropDetailActivity"
            android:label="@string/crop_detail_title">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.spithackathon.Krishi.activities.CropProductionActivity" />
        </activity>
        <activity
            android:name=".activities.WebActivity"
            android:label="@string/title_activity_web"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.spithackathon.Krishi.activities.Select_Policy" />
        </activity>
        <activity
            android:name=".activities.HorticultureDetailActivity"
            android:label="@string/title_activity_horticulture"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.spithackathon.Krishi.activities.HorticultureActivity" />
        </activity>
        <activity
            android:name=".activities.SoilHealthActivity"
            android:label="@string/title_activity_soil_health"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.spithackathon.Krishi.activities.MainActivity" />
        </activity>
    </application>

</manifest>